{
  "description": "Build Fedora x86_64 Mate workstation",
  "variables": {
      "proxy": "{{ env `http_proxy` }}"
  }, 
  "builders": [
    {
      "communicator": "ssh",
      "source_path": "fedora-gui",
      "output_dir": "./fedora-mate",
      "box_name": "fedora-mate",
      "provider": "virtualbox",
      "skip_add": true,
      "type": "vagrant"
    } 
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/mate.sh"
      ],
      "environment_vars": [
        "http_proxy={{ user `proxy` }}"
      ],
      "override": {
        "vagrant": {
          "execute_command": "echo 'vagrant'|sudo -S {{ .Vars }} bash '{{.Path}}'"
        }
      }
    }
  ]
}
